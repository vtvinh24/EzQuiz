<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Import quizzes from external sources"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_import_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import from File" />

    <Button
        android:id="@+id/btn_import_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Import from URL" />

    <TextView
        android:id="@+id/text_import_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="#888888" />

    <EditText
        android:id="@+id/edit_paste_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_paste_id"
        android:inputType="text"
        android:autofillHints="username"
        android:layout_marginTop="16dp" />

    <RadioGroup
        android:id="@+id/radio_import_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <RadioButton
            android:id="@+id/radio_flashcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_flashcards"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/radio_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_quizzes"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_import_paste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_import_paste"
        android:layout_marginTop="8dp" />

</LinearLayout>
