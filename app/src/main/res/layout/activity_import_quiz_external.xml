<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="#FAFAFA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan QR or Import Manually"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <FrameLayout
        android:id="@+id/qr_scanner_placeholder"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="#EEE"
        android:layout_marginBottom="16dp"
        android:foreground="@drawable/bg_scanner_border">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="QR Scanner Placeholder"/>
    </FrameLayout>

    <Button
        android:id="@+id/btn_import_manually"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import Manually"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_import_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="#888888"
        android:background="#FFF9C4"
        android:padding="8dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_import_paste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_import_paste"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

</LinearLayout>
