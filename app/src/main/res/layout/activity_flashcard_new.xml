<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.FlashcardActivity">

    <!-- Nút nhảy cóc, giữ nguyên -->
    <Button
        android:id="@+id/btn_jump_to"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="1 / 100" />

    <!-- ViewPager, giữ nguyên nhưng bỏ paddingStart/End -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/flashcard_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/bottom_controls"
        android:layout_below="@id/btn_jump_to"
        android:clipToPadding="false"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"/>

    <!-- === THÊM NÚT TRÁI (PREVIOUS) === -->
    <ImageButton
        android:id="@+id/btn_previous_card"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_left"
        android:contentDescription="@string/previous_card"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        app:tint="?attr/colorControlNormal"/>

    <!-- === THÊM NÚT PHẢI (NEXT) === -->
    <ImageButton
        android:id="@+id/btn_next_card"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="@string/next_card"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        app:tint="?attr/colorControlNormal"/>

    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dont_know"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Don't Know"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/btn_know"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Know"
            android:textColor="@android:color/holo_green_dark" />
    </LinearLayout>
</RelativeLayout>